<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobileproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DeezerTrackList" />
        <activity android:name=".DeezerSongDetailDelete" />
        <activity android:name=".DeezerSongDetails" />
        <activity android:name=".DeezerFavouriteList" />
        <activity android:name=".DeezerSongSearchMain" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LyricsMainActivity" />
        <activity android:name=".LyricsFavouritesActivity" />
        <activity android:name=".LyricsEmptyActivity" />
    </application>

</manifest>